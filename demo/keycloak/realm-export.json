{
  "realm": "collector-shop",
  "enabled": true,
  "sslRequired": "none",
  "registrationAllowed": true,
  "loginWithEmailAllowed": true,
  "duplicateEmailsAllowed": false,
  "resetPasswordAllowed": true,
  "editUsernameAllowed": false,
  "bruteForceProtected": true,
  "roles": {
    "realm": [
      { "name": "BUYER", "description": "Acheteur" },
      { "name": "SELLER", "description": "Vendeur" },
      { "name": "ADMIN", "description": "Administrateur" }
    ]
  },
  "clients": [
    {
      "clientId": "collector-shop-app",
      "name": "Collector Shop Application",
      "enabled": true,
      "publicClient": true,
      "directAccessGrantsEnabled": true,
      "standardFlowEnabled": true,
      "redirectUris": [
        "http://localhost:3000/*",
        "http://localhost:5173/*",
        "http://localhost:4003/*"
      ],
      "webOrigins": [
        "http://localhost:3000",
        "http://localhost:5173",
        "http://localhost:4003"
      ],
      "defaultClientScopes": [
        "web-origins",
        "acr",
        "profile",
        "roles",
        "email"
      ],
      "protocolMappers": [
        {
          "name": "realm-roles",
          "protocol": "openid-connect",
          "protocolMapper": "oidc-usermodel-realm-role-mapper",
          "config": {
            "claim.name": "realm_roles",
            "jsonType.label": "String",
            "multivalued": "true",
            "id.token.claim": "true",
            "access.token.claim": "true",
            "userinfo.token.claim": "true"
          }
        }
      ]
    }
  ],
  "users": [
    {
      "username": "buyer@collector.shop",
      "email": "buyer@collector.shop",
      "firstName": "Jean",
      "lastName": "Acheteur",
      "enabled": true,
      "emailVerified": true,
      "credentials": [
        {
          "type": "password",
          "value": "Test1234!",
          "temporary": false
        }
      ],
      "realmRoles": ["BUYER"]
    },
    {
      "username": "seller@collector.shop",
      "email": "seller@collector.shop",
      "firstName": "Marie",
      "lastName": "Vendeuse",
      "enabled": true,
      "emailVerified": true,
      "credentials": [
        {
          "type": "password",
          "value": "Test1234!",
          "temporary": false
        }
      ],
      "realmRoles": ["SELLER"]
    },
    {
      "username": "admin@collector.shop",
      "email": "admin@collector.shop",
      "firstName": "Admin",
      "lastName": "Syst√®me",
      "enabled": true,
      "emailVerified": true,
      "credentials": [
        {
          "type": "password",
          "value": "Test1234!",
          "temporary": false
        }
      ],
      "realmRoles": ["ADMIN"]
    }
  ]
}
