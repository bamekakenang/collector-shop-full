# JWT Secret (pour l'auth custom)
JWT_SECRET=your-jwt-secret-here

# Stripe Configuration (optionnel, pour les paiements)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key

# Keycloak Configuration (utilisé avec docker-compose.keycloak.yml)
# Ce secret sera généré après la création du client Keycloak
KEYCLOAK_CLIENT_SECRET=your-keycloak-client-secret

# Auth0 Configuration (utilisé avec docker-compose.auth0.yml)
# Obtenez ces valeurs depuis votre dashboard Auth0
AUTH0_DOMAIN=your-tenant.auth0.com
AUTH0_AUDIENCE=https://api.collector-shop.com
AUTH0_CLIENT_ID=your-auth0-backend-client-id
AUTH0_CLIENT_SECRET=your-auth0-backend-client-secret
AUTH0_FRONTEND_CLIENT_ID=your-auth0-frontend-client-id

# Frontend URL
FRONTEND_URL=http://localhost:5173
